{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "*"
            ]
        },
        "target": "es2018",
        "module": "commonjs",
        "types": [
            "node"
        ],
        "outDir": "./dist/",
        "rootDir": "./src/",
        "strict": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "allowUmdGlobalAccess": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "checkJs": false,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true
    },
    "exclude": [
        "./test"
    ]
}